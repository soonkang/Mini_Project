<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/home_carparkImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/black"
                />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_carparkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Sembawang, Montral Drive, 755042"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_recycler_view_capacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capacity: 56%"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:paddingTop="3dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/capacity_full"
                        android:id="@+id/home_recycler_view_capacity_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>








            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_carparkDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.8km"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/favouriteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/favourite_logo"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/home_recycler_view_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/map_logo"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>







    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>